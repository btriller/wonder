#!/bin/sh -e

# preinst script for projectwonder-wotaskd

case "$1" in
	install|upgrade)
		if [ -x "/etc/init.d/wotaskd" ]; then
			if [ -x /usr/sbin/invoke-rc.d ]; then
				invoke-rc.d wotaskd stop || true
			else
				/etc/init.d/wotaskd stop || true
			fi
		fi

	;;

	abort-upgrade)
	;;

	*)
		echo "preinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

#DEBHELPER#

exit 0
